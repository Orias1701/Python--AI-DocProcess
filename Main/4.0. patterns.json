{
  "markers": [
    {
      "pattern": "[-+*•●◦○] ",
      "description": "Dấu đầu dòng"
    },
    {
      "pattern": "[0-9a-zA-Z\\-+*ivxIVX]+[.)\\]:] ",
      "description": "Danh sách số hoặc chữ"
    },
    {
      "pattern": "\\(\\d+\\) ",
      "description": "Số trong ngoặc"
    },
    {
      "pattern": "\\(\\w+\\) ",
      "description": "Chữ hoặc từ trong ngoặc"
    },
    {
      "pattern": "[0-9]+\\s+-\\s+[0-9]+ ",
      "description": "Khoảng số"
    },
    {
      "pattern": "^(Chapter|Section|Part|Điều)\\s+[0-9]+|^(Chapter|Section|Part|Điều)\\s+[MDCLXVI]+|^(?:Chapter|Section|Part|Điều)\\s*[A-Z]",
      "description": "Chương/Mục/Phần/Điều với số, số La Mã hoặc chữ cái"
    }
  ],
  "brackets": {
    "open": "[\\(\\[\\{«“‘]",
    "close": "[\\)\\]\\}»”’]",
    "pairs": ["()", "[]", "{}", "«»", "“”", "‘’"]
  },
  "sentence_ends": {
    "punctuation": "[.!?:;]",
    "valid_brackets": ["()", "[]", "{}"]
  }
}